        center: [73.389767, 54.957217],
        zoom: 16,
        key: '07d215b7-911c-4779-a9ae-939e07dcc51c',
    });
    const marker = new mapgl.Marker(map, {
        coordinates: [73.389767, 54.957217],               
    });

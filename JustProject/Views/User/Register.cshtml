@model JustProject.Domain.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="login d-flex justify-content-center">    
    <div class="registration">        
        <div class="d-flex justify-content-between login-a">
            <a class="btn-link" href="~/User/Login">Вход</a>
            <div>
                <div class="line-red"></div>
                <a class="btn-link" >Регистрация</a>
            </div>
        </div>
        <form class="d-grid enter justify-content-center" action="~/User/Register" method="post">
            <label>E-mail</label>
            <input type="text" name="Email" value="" />
            <label>Пароль</label>
            <input type="password" name="Password" value="" /> 
            <label>Повторите пароль</label>
            <input type="password" name="ConfirmPassword" value="" />

            <button type="submit">Зарегистрироваться</button>            
            <p>Нажимая кнопку “Зарегистрироваться”, Вы принимаете условия<br />
            Пользовательского соглашения</p>
        </form>        
    </div>    
</div>
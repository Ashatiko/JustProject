@model IEnumerable<JustProject.Domain.Entity.Tests>

@{
    ViewBag.Title = "Каталог";
}

<link rel="stylesheet" href="~/css/Tests.css" />

<div class="buy-tests">
    <div class="d-flex justify-content-between tariff">
        @switch (ViewData["Request"])
        {
            case "Организация":                    
                    <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Специалисты" ><h1>Специалисты</h1></a>
                    <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Школьники" ><h1>Школьники</h1></a>
                    <div>
                        <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Организация" ><h1>Организация</h1></a>
                        <hr />
                    </div>                
                break;
            case "Школьники":                    
                    <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Специалисты" ><h1>Специалисты</h1></a>                                            
                    <div>
                        <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Школьники" ><h1>Школьники</h1></a>
                        <hr />
                    </div>
                    <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Организация" ><h1>Организация</h1></a>
                break;
            default:
                    <div>
                        <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Специалисты" ><h1>Специалисты</h1></a>
                        <hr />
                    </div>                    
                    <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Школьники" ><h1>Школьники</h1></a>
                    <a asp-action="BuyTestsType" asp-controller="Tests" asp-route-type="Организация" ><h1>Организация</h1></a>
                break;
        }
    </div>
    <h1 class="tariff-txt">Тарифы</h1>
    @if (ViewData["Request"] == "Школьники")
    {
        @foreach (var test in Model)
        {
            <a asp-action="TypeTest" asp-controller="Tests" asp-route-id="@test.Id">
                <div class="tariff-cart">
                    <div class="d-flex justify-content-between pb-5">
                        <h1>@test.NameTest </h1>
                        <img src="~/Images/Test/Star.png"/>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>@test.Description</p>
                        <img class="mt-auto" src="~/Images/Test/basket.png"/>
                    </div>
                </div>
            </a>
        }
    }
    @switch (ViewData["Request"])
    {
        case "Организация":                    
                @foreach (var test in Model)
                {
                    <a asp-action="TypeTest" asp-controller="Tests" asp-route-id="@test.Id">
                        <div class="tariff-cart">
                            <div class="d-flex justify-content-between pb-5">
                                <h1>@test.NameTest </h1>
                                <h1>@test.Cost  Р</h1>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p>@test.Description</p>
                                <img class="mt-auto" src="~/Images/Test/basket.png"/>
                            </div>
                        </div>
                    </a>
                }             
            break;
        case "Школьники":                    
                @foreach (var test in Model)
                {
                    <a asp-action="TypeTest" asp-controller="Tests" asp-route-id="@test.Id">
                        <div class="tariff-cart">
                            <div class="d-flex justify-content-between pb-5">
                                <h1>@test.NameTest </h1>
                                <h1>@test.Cost  Р</h1>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p>@test.Description</p>
                                <img class="mt-auto" src="~/Images/Test/basket.png"/>
                            </div>
                        </div>
                    </a>
                } 
            break;
        default:
                @foreach (var test in Model)
                {
                    <a asp-action="TypeTest" asp-controller="Tests" asp-route-id="@test.Id">
                        <div class="tariff-cart">
                            <div class="d-flex justify-content-between pb-5">
                                <h1>@test.NameTest </h1>
                                <img src="~/Images/Test/Star.png"/>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p>@test.Description</p>
                                <img class="mt-auto" src="~/Images/Test/basket.png"/>
                            </div>
                        </div>
                    </a>
                } 
            break;
    }
</div>

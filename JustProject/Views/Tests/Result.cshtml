            @for (var i = 0; i < 9; i++)
            {                
                if (Model.ThirdStep == i)
                {
                    <th>Point</th>
                }
                else
                {
                    <th></th>
                }
            }
        </tr>
        <tr>
            <td>Творческое мышление</td>
